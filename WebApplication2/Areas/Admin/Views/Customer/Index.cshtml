@model List<Customer>


<div class="container">
	<div class="row">

		<div class="row">
			<div class="col-2">
				<a class="btn btn-success" asp-controller="Customer" asp-action="Create">Create</a>

			</div>

		</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Username</th>
					<th scope="col">Password</th>
					<th scope="col">Email</th>

				</tr>
			</thead>
			<tbody>


				@foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.Id</th>
						<td>@item.Username</td>
						<td>@item.Password</td>
						<td>@item.Email</td>

						@* 						<td>
							<a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"> Update</a>
							<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

						</td> *@


						<td style="border: 1px solid #ddd; padding: 8px;">
							<a asp-action="Update" asp-route-id="@item.Id" style="padding: 4px 8px; background-color:yellow">Update</a>
							<a asp-action="Delete" asp-route-id="@item.Id" style="padding: 4px 8px; background-color:Red">Delete</a>


						</td>


						)


					</tr>
				}

			</tbody>


		</table>

	</div>

</div>



