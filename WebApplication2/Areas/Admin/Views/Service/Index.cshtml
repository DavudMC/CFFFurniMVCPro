﻿
@model List<GetServiceVM>
<div class="container">
	<div class="row">

		<div class="row">
			<div class="col-2">
				<a class="btn btn-success" asp-controller="Service" asp-action="Create">Create</a>

			</div>

		</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Description</th>
					<th scope="col">Image</th>
				</tr>
			</thead>
			<tbody>


				@foreach (var service in Model)
				{
					<tr>
						<th scope="row">@service.Id</th>
						<td>@service.Name</td>
						<td>@service.Description</td>

						<td>
							<img src="~/assets/images/@service.ImageName" alt="@service.Name" width="40" />
						</td>

						@* 						<td>
							<a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"> Update</a>
							<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

						</td> *@


						<td style="border: 1px solid #ddd; padding: 8px;">
							<a asp-action="Update" asp-route-id="@service.Id" style="padding: 4px 8px; background-color:yellow">Update</a>
							<a asp-action="Delete" asp-route-id="@service.Id" style="padding: 4px 8px; background-color:Red">Delete</a>


						</td>


						


					</tr>
				}

			</tbody>


		</table>

	</div>

</div>
